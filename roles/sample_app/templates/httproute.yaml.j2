apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: {{ sample_app_name }}
  namespace: {{ sample_app_namespace }}
spec:
  parentRefs:
  - name: {{ gateway_name }}
    namespace: {{ sample_app_namespace }}
  rules:
  - backendRefs:
    - name: {{ sample_app_name }}
      kind: Service
      port: 80
